<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:background">@drawable/bg_launcher</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FlightDetailsView" />

    <style name="FlightDetailsView.Airline" parent="FlightDetailsView">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FlightDetailsView.FlightInfo" parent="FlightDetailsView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FlightDetailsView.Date" parent="FlightDetailsView">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FlightDetailsView.Location" parent="FlightDetailsView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FlightDetailsView.Time" parent="FlightDetailsView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LodgingDetailsView" />

    <style name="LodgingDetailsView.HotelInfo" parent="LodgingDetailsView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LodgingDetailsView.Nights" parent="LodgingDetailsView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LodgingDetailsView.NightsLabel" parent="LodgingDetailsView">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LodgingView" />

    <style name="LodgingView.Nights" parent="LodgingView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LodgingView.NightsLabel" parent="LodgingView">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PriceView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PriceView.Accent">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TripDetailsView" />

    <style name="TripDetailsView.Flights" parent="TripDetailsView">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TripDetailsView.Date" parent="TripDetailsView">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TripDetailsView.Time" parent="TripDetailsView">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
