<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="middle"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        tools:text="JFK - MIA - JFK"
        tools:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:id="@+id/departure_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="middle"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        tools:text="18.04.2018"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/flights"
        />

    <TextView
        android:id="@+id/departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="middle"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        tools:text="07:10"
        app:layout_constraintTop_toBottomOf="@+id/departure_date"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/departure_date"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@+id/departure_date"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:id="@+id/return_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="middle"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        tools:text="24.04.2018"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/flights"
        app:layout_constraintStart_toEndOf="@+id/departure_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/return_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="middle"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        tools:text="19:10"
        app:layout_constraintTop_toBottomOf="@+id/return_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/return_date"
        android:layout_marginStart="8dp"
        />

</android.support.constraint.ConstraintLayout>
